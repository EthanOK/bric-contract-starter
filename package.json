{
  "name": "bric-contract-starter",
  "version": "1.0.0",
  "description": "This repository contains the core smart contracts for the Bric Protocol.",
  "main": "index.js",
  "keywords": [
    "bric",
    "contract",
    "starter"
  ],
  "author": "bric-labs",
  "license": "MIT",
  "scripts": {
    "prepare": "husky install",
    "build": "npx hardhat compile && forge build",
    "size": "npx hardhat size-contracts && forge build --sizes",
    "test": "npx hardhat test && forge test -vvv",
    "test:hh": "npx hardhat test",
    "test:ff": "forge test -vvv",
    "node": "anvil --fork-url sepolia",
    "format": "prettier -w contracts/**/* test_solidity/**/* test/**/*"
  },
  "devDependencies": {
    "@nomicfoundation/hardhat-chai-matchers": "^2.0.0",
    "@nomicfoundation/hardhat-ethers": "3.1.0",
    "@nomicfoundation/hardhat-foundry": "^1.1.3",
    "@nomicfoundation/hardhat-ignition": "0.15.13",
    "@nomicfoundation/hardhat-ignition-ethers": "0.15.14",
    "@nomicfoundation/hardhat-network-helpers": "1.1.0",
    "@nomicfoundation/hardhat-toolbox": "6.1.0",
    "@nomicfoundation/hardhat-verify": "2.1.1",
    "@typechain/ethers-v6": "0.5.1",
    "@typechain/hardhat": "^9.0.0",
    "@types/chai": "^4.2.0",
    "@types/mocha": ">=9.1.0",
    "@types/node": ">=18.0.0",
    "chai": "^4.2.0",
    "ethers": "^6.4.0",
    "hardhat": "^2.26.3",
    "hardhat-contract-sizer": "^2.10.1",
    "hardhat-gas-reporter": "2.3.0",
    "husky": "^9.1.7",
    "prettier": "3.6.2",
    "prettier-plugin-solidity": "2.1.0",
    "solidity-coverage": "^0.8.16",
    "ts-node": ">=8.0.0",
    "typechain": "^8.3.0",
    "typescript": ">=4.5.0"
  },
  "dependencies": {
    "@openzeppelin/contracts": "4.9.6",
    "@openzeppelin/contracts-upgradeable": "4.9.3"
  },
  "lint-staged": {
    "contracts/**/*.sol": [
      "prettier --write"
    ],
    "test_foundry/**/*.sol": [
      "prettier --write"
    ],
    "test/**/*.{js,ts}": [
      "prettier --write"
    ]
  },
  "packageManager": "yarn@4.9.2"
}
